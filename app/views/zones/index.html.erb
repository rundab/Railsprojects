<p id="notice"><%= notice %></p>

<h1>Listing Zones</h1>

<table>
 <% @zones.each do | zone | %>
      <tr class="<%= cycle('list_line_odd', 'list-line-even') %>">
        <td class="list-description">
          <dl>
            <dt><%= zone.name %></dt>
          </dl>
        </td>
        <td class="list_actions">
          <%= link_to 'Show', zone %><br />
          <%= link_to 'Edit', edit_zone_path(zone) %><br />
          <%= link_to 'Destroy', zone, method: :delete, data: { confirm: "Are you sure?"} %>
        </td>
      </tr>
 <% end %>

</table>
<br />
<%= link_to 'New Zone', new_zone_path %>

